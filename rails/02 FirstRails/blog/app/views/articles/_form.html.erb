<%= form_for @article do |f| %>
    <% if @article.errors.any? %>
      <div>
        <h2> pluralize(@article.errors.count,"error") </h2>
        <ul>
          <% @article.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %>
      <%= f.text_field :text %>
    </p>

    <p>
      <%= f.submit %>
    </p>

<% end %>